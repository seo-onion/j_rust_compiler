# Configuración de Fly.io para Rust Compiler API

app = "rust-compiler-api"
primary_region = "mia"  # Miami - cambia según tu ubicación

[build]
  dockerfile = "Dockerfile"

[env]
  COMPILER_PATH = "/app/compiler"

[http_service]
  internal_port = 8000
  force_https = true
  auto_stop_machines = true
  auto_start_machines = true
  min_machines_running = 0

[[http_service.checks]]
  interval = "30s"
  timeout = "5s"
  grace_period = "10s"
  method = "GET"
  path = "/health"

[mounts]
  source = "compiler_data"
  destination = "/app/backend/temp_compilations"
